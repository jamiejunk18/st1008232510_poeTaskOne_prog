<Window x:Class="st1008232510_poeTaskOne.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:st1008232510_poeTaskOne"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="250" Width="500">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#b3a107" Offset="0.0"/>
            <GradientStop Color="#c43f06" Offset="0.75"/>
        </LinearGradientBrush>
    </Window.Background>
    <StackPanel>

        <Label Foreground="white" 
               HorizontalAlignment="Center"
               Margin="0,80,0,0"
               FontSize="30">
            EverPLan
        </Label>
        <ProgressBar x:Name="ProgressBarOne"
                     Height="10" 
                     Width="248" 
                     Value="0"
                     Maximum="100"
                     IsIndeterminate="True" ValueChanged="ProgressBarOne_ValueChanged"/>

    </StackPanel>

</Window>
